\ProvidesPackage{mystyle}

% Margin
\usepackage[margin=2.5cm]{geometry}

% Custom Headers
\usepackage{fancyhdr}
\pagestyle{fancy}
\lhead{Timothy Forrer}
\rhead{Transferring Entanglement Between Different Dimensions}
\setlength{\headheight}{15pt} % Fix warnings regarding header height.
\renewcommand{\headrulewidth}{0pt} % Remove horizontal line underneath headers.

% Acknowledgements Section
\newenvironment{acknowledgements}
    {\renewcommand\abstractname{Acknowledgements}\begin{abstract}}
    {\end{abstract}}

% Bibliography management
\usepackage[
    backend=biber,
    style=numeric-comp,
    sorting=none]
    {biblatex}
\addbibresource{bib.bib}

\makeatletter % Forces numbered citations.
\RequireBibliographyStyle{numeric}
\makeatother

% Customise appendix appearance.
\usepackage{appendix}
\renewcommand{\appendixpagename}{Appendices}
\renewcommand{\appendixtocname}{\appendixpagename}

% Maths pacakges.
\usepackage{amsmath}
\usepackage{amsfonts}
\usepackage{braket}
\usepackage{amsthm}

% Custom math environments
\newtheorem{theorem}{Theorem}[section]
\newtheorem{definition}[theorem]{Definition}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{claim}[theorem]{Claim}

% Custom math operators
\DeclareMathOperator{\Tr}{Tr}

\newcommand{\C}[1]{C\text{-}#1}

% Graphics and images.
\usepackage{graphicx}
\usepackage[font=small,labelfont=bf]{caption} % Caption customisation.
\usepackage{tikz}
\usetikzlibrary{quantikz} % Quantum circuits
\usepackage[section]{placeins} % Ensure figures appear in the section they are placed.

% Links to content.
\usepackage{hyperref}
\hypersetup{
    colorlinks,
    citecolor=blue,
    filecolor=blue,
    linkcolor=blue,
    urlcolor=blue
}
\usepackage{cleveref} % Reference group of equations, must be loaded after hypperef.
\crefrangelabelformat{equation}{#3#1#4-#5#2#6}
\crefname{equation}{equation}{equations}
\Crefname{equation}{Equation}{Equations}

% Localisation.
\usepackage[english]{babel}
\usepackage[autostyle, english = british]{csquotes}
\MakeOuterQuote{"}

% No indentation on new paragraph.
\usepackage[parfill]{parskip}

% Allow ranges on item labels in enumerate environment.
\def\itemrange#1{%
\addtocounter{enumi}{1}%
\edef\labelenumi{\theenumi--\noexpand\theenumi.}%
\addtocounter{enumi}{-1}%
\addtocounter{enumi}{#1}%
\item
\def\labelenumi{\theenumi}}